<Window x:Class="FruitAndVeggie.MoreLessWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FruitAndVeggie"
        mc:Ignorable="d"
        Title="MoreLessWindow" Height="146" Width="395">
    <Grid Margin="0,0,10,6">
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <TextBlock Text="EnterNumber:" Margin="0,0,0,10"/>
            <TextBox x:Name="txtNumber" Width="120" Margin="0,0,0,10" HorizontalAlignment="Center" VerticalAlignment="Center" />
            <Button Content="ОК" Width="80" Height="30" HorizontalAlignment="Center" VerticalAlignment="Center" Click="OKButton_Click"/>
        </StackPanel>
    </Grid>
</Window>
